# Server Configuration
PORT=3001

# Database Configuration
DB_USER=shotspot_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shotspot_db
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000

# Alternative: Use DATABASE_URL for connection string
# DATABASE_URL=postgresql://user:password@host:port/database

# Database Superuser (for setup only)
POSTGRES_USER=postgres
# Add POSTGRES_PASSWORD if your postgres superuser requires a password
# POSTGRES_PASSWORD=your_postgres_password

# Security
JWT_SECRET=your-jwt-secret-key
# SESSION_SECRET is used for express-session. If not set, JWT_SECRET will be used as fallback
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session/Cookie Configuration (important for Docker)
# Set SESSION_SECURE=false when running in Docker without HTTPS
# SESSION_SECURE=false
# SESSION_SAME_SITE=lax
# SESSION_MAX_AGE=86400000
# COOKIE_DOMAIN= (leave empty for Docker)

# Trusted IPs (comma-separated, for rate limit bypass)
# TRUSTED_IPS=127.0.0.1,10.0.0.1

# Default Admin User (created automatically on first startup)
# If no admin users exist, a default admin will be created with these credentials
# IMPORTANT: Change the password immediately after first login!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@shotspot.local
# Leave empty to auto-generate a secure password (recommended)
# The generated password will be logged ONCE during first startup
DEFAULT_ADMIN_PASSWORD=

# API Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# RATE_LIMIT_SKIP_TRUSTED=true
API_MAX_PAYLOAD_SIZE=10kb

# Security Headers
# ENABLE_HSTS=true
# HSTS_MAX_AGE=31536000
# CSP_REPORT_URI=http://localhost:3001/api/csp-report

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
# LOG_FILE_PATH=logs/app.log
# ENABLE_REQUEST_LOGGING=true
# ENABLE_ERROR_LOGGING=true
# ENABLE_SECURITY_LOGGING=true

# Error Notifications (Optional)
# Enable error notifications to multiple channels
ENABLE_ERROR_NOTIFICATIONS=false

# Webhook endpoint for custom error handling
# ERROR_NOTIFICATION_WEBHOOK=https://your-webhook-url.com/errors

# Email notifications
# ERROR_NOTIFICATION_EMAIL=admin@example.com
# ERROR_EMAIL_FROM=errors@shotspot.app

# Slack integration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams integration
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Log viewer URL (for notification links)
# LOG_VIEWER_URL=http://localhost:3001

# Frontend Build Configuration
# VITE_API_URL=http://localhost:3001/api