FROM node:20-alpine

# Security: Update Alpine packages to fix vulnerabilities
RUN apk update && apk upgrade && rm -rf /var/cache/apk/*

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose backend port and debugger port
EXPOSE 3001 9229

# Development command with debugger
CMD ["npm", "run", "dev"]
