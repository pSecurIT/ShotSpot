FROM node:20-alpine

# Security: Update Alpine packages to fix vulnerabilities
RUN apk update && apk upgrade && rm -rf /var/cache/apk/*

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 3000

# Development command
CMD ["npm", "run", "dev", "--", "--host"]
