{
  "name": "shotspot-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/splash-screen": "^7.0.3",
    "axios": "^1.13.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^3.5.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "axios-mock-adapter": "^2.1.0",
    "cypress": "^15.6.0",
    "del": "^8.0.1",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 2",
    "lint:fix": "eslint . --fix",
    "mobile:sync": "npm run build && npx cap sync",
    "mobile:android": "npm run mobile:sync && npx cap open android",
    "mobile:ios": "npm run mobile:sync && npx cap open ios",
    "mobile:run:android": "npm run mobile:sync && npx cap run android",
    "mobile:run:ios": "npm run mobile:sync && npx cap run ios"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "overrides": {
    "glob": ">=11.1.0",
    "tar": "6.2.1"
  }
}
