{
  "name": "shotspot",
  "version": "1.0.0",
  "description": "ShotSpot - Korfball Match Statistics Application",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "setup-db": "cd backend && npm run setup-db",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "cd backend && npm test",
    "test:watch": "cd backend && npm run test:watch",
    "test:coverage": "cd backend && npm run test:coverage",
    "mobile:sync": "cd frontend && npm run mobile:sync",
    "mobile:android": "cd frontend && npm run mobile:android",
    "mobile:ios": "cd frontend && npm run mobile:ios",
    "mobile:build:android": "cd frontend && npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "mobile:build:ios": "cd frontend && npm run build && npx cap sync ios",
    "release:create": "node scripts/create-release.js",
    "release:changelog": "node scripts/generate-changelog.js",
    "lint": "npm --prefix backend run lint && npm --prefix frontend run lint",
    "lint:fix": "npm --prefix backend run lint:fix && npm --prefix frontend run lint:fix",
    "test:frontend": "npm --prefix frontend run test:run"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "overrides": {
    "glob": ">=11.1.0",
    "tar": "6.2.1"
  }
}