            "description": "Filter by club",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "The number of records to return. Default value is 10, maximum value is 250.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Used for pagination, this is the number of records from a collection to skip. Default value is 0.",
            "required": false,
